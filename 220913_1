class Area:
    def __init__(self, width=0, height=0):
        self.width = width
        self.height = height

    def square(self):
        return self.width * self.height
    def triangle(self):
        return self.width * self.height / 2
    def circle(self):
        return (self.width / 2) ** 2 * 3.14

area = Area(10, 20)
print(f"사각형의 넓이 : {area.square():.1f}")
print(f"삼각형의 넓이 : {area.triangle():.1f}")
print(f"원의 넓이 : {area.circle():.1f}")
